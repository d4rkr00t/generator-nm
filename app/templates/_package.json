{
  "name": "<%= moduleName %>",
  "version": "1.0.0",
  "description": "<%= moduleDescription %>",<% if (cli) { %>
  "bin": "cli.js",<% } %>
  "main": "lib/index.js",
  "files": [
    "lib/"<% if (cli) { %>,
    "cli.js"<% } %>
  ],
  "keywords": [
    "npm",
    "yeoman",
    "generator",
    "bootstrap"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/<%= githubUsername %>/<%= moduleName %>"
  },
  "scripts": {
    "audit": "nsp check package",
    "build": "babel -d ./ ./src",
    "check": "npm run audit && npm outdated --depth 0",
    "cov": "babel-node ./node_modules/.bin/isparta cover --report lcovonly --report html _mocha -- test/*.test.js -r test/setup.js",<% if (coveralls) { %>
    "coveralls": "npm run cov && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",<% } %>
    "lint": "eslint src test",
    "test": "mocha test/*.test.js -r babel/register -r test/setup.js",
    "validate": "npm run lint && npm test",
    "prepare": "npm run validate && npm run check && npm run build",
    "pp": "npm run prepare"
  },
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= website %>"
  },
  "pre-commit": [
    "validate"
  ],
  "dependencies": {<% if (cli) { %>
    "meow": "^3.4.2",
    "chalk": "^1.1.1"
  <% } %>},
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "chai": "^3.3.0",<% if (coveralls) { %>
    "coveralls": "^2.11.4",<% } %><% if (commitizen) { %>
    "cz-conventional-changelog": "^1.1.4",<% } %>
    "eslint": "^1.8.0",
    "isparta": "^3.5.0",
    "mocha": "^2.3.3",
    "mocha-lcov-reporter": "1.0.0",
    "nsp": "^2.0.0",
    "pre-commit": "^1.1.2"
  }<% if (commitizen) { %>,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }<% } %>
}
