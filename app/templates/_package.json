{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= moduleDescription %>",<% if (cli) { %>
  "bin": "cli.js",<% } %>
  "main": "lib/index.js",
  "keywords": [
    "npm",
    "yeoman",
    "generator",
    "bootstrap"
  ],
  "license": "MIT",
  "repository": "<%= githubUsername %>/<%= moduleName %>",
  "scripts": {
    "audit": "nsp package",
    "build": "babel -d ./ ./src",
    "check": "npm run audit && npm outdated --depth 0",
    "cov": "babel-node ./node_modules/.bin/isparta cover --report lcovonly --report html _mocha -- test/*.test.js -r test/setup.js",<% if (coveralls) { %>
    "coveralls": "npm run cov && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",<% } %>
    "lint": "eslint src test",
    "readme": "node ./node_modules/node-readme/bin/node-readme.js",
    "test": "mocha test/*.test.js -r babel/register -r test/setup.js",
    "validate": "npm run lint && npm test",
    "prepare": "npm run validate && npm run check && npm run readme && npm run build",
    "pp": "npm run prepare"
  },
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= website %>"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {<% if (cli) { %>
    "meow": "^3.3.0",
    "chalk": "^1.1.1"
  <% } %>},
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-eslint": "^4.0.10",
    "chai": "^3.2.0",<% if (coveralls) { %>
    "coveralls": "^2.11.4",<% } %><% if (commitizen) { %>
    "cz-conventional-changelog": "^1.1.4",<% } %>
    "eslint": "^1.7.0",
    "isparta": "^3.0.3",
    "mocha": "^2.2.5",
    "mocha-lcov-reporter": "0.0.2",
    "node-readme": "^0.1.9",
    "nsp": "^1.1.0",
    "pre-commit": "^1.1.1"
  }<% if (commitizen) { %>,
  "czConfig": {
    "path": "./node_modules/cz-conventional-changelog"
  }<% } %>
}
